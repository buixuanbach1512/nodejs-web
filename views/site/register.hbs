<div class='container'>
    <div class='row'>
        <div class='col-md-6 offset-md-3'>
            <div class='card my-5'>
                <form class='card-body cardbody-color p-lg-5' method="POST" action="/me/save-user">
                    <div class='text-center'>
                        <h2>Đăng ký</h2>
                    </div>

                    <div class='mb-3'>
                        <input
                            type='text'
                            class='form-control'
                            id='Username'
                            name="name"
                            aria-describedby='emailHelp'
                            placeholder='Tài khoản'
                        />
                    </div>
                    <div class='mb-3'>
                        <input
                            type='email'
                            class='form-control'
                            id='Email'
                            name="email"
                            aria-describedby='emailHelp'
                            placeholder='Email'
                        />
                    </div>
                    <div class='mb-3'>
                        <input
                            type='password'
                            class='form-control'
                            id='password'
                            name="password"
                            placeholder='Mật khẩu'
                        />
                    </div>
                    <div class='mb-3'>
                        <input
                            type='text'
                            class='form-control'
                            id='Address'
                            name="address"
                            aria-describedby='emailHelp'
                            placeholder='Địa chỉ'
                        />
                    </div>
                    <div class='mb-3'>
                        <input
                            type='number'
                            class='form-control'
                            id='Phone'
                            name="phone"
                            aria-describedby='emailHelp'
                            placeholder='Số điện thoại'
                        />
                    </div>
                    <div class='text-center'><button
                            type='submit'
                            class='btn btn-color px-5 mb-5 w-100'
                        >Đăng ký</button></div>
                    <div
                        id='emailHelp'
                        class='form-text text-center mb-5 text-dark'
                    >Đã có tài khoản đăng nhập ?
                        <a href='/me/login' class='text-dark fw-bold'>
                            Đăng nhập</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>