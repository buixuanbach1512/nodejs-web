<!-- BREADCRUMB -->
<div id='breadcrumb' class='section'>
    <!-- container -->
    <div class='container'>
        <!-- row -->
        <div class='row'>
            <div class='col-md-12'>
                <h3 class='breadcrumb-header'>Giỏ hàng</h3>
                <ul class='breadcrumb-tree'>
                    <li><a href='#'>Home</a></li>
                    <li class='active'>Giỏ hàng</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

{{#if products}}
    <div class='row'>
        <div class='col-lg-12'>
            <div class='cart-body'>
                <div class='box-element'>

                    <a class='btn btn-outline-dark' href='/'>&#x2190; Tiếp tục
                        mua hàng</a>

                    <br />
                    <br />
                    <table class='table'>
                        <tr>
                            <th><h5>Tổng tiền :<strong>
                                        {{totalPrice}}</strong></h5></th>
                            <th>
                                <a
                                    style='float:right; margin:5px;'
                                    class='btn btn-success'
                                    href='/checkout'
                                >Checkout</a>
                            </th>
                        </tr>
                    </table>

                </div>

                <br />
                <div class='box-element'>
                    <div class='cart-row'>
                        <div style='flex:2'></div>
                        <div style='flex:2'><strong>Sản phẩm</strong></div>
                        <div style='flex:1'><strong>Giá tiền</strong></div>
                        <div style='flex:1'><strong>Số lượng</strong></div>
                        <div style='flex:1'><strong>Tổng giá</strong></div>
                        <div style='flex:1'><strong>Chức năng</strong></div>
                    </div>
                    {{#each products}}
                        <div class='cart-row'>
                            <div style='flex:2'><img
                                    class='row-image'
                                    src='/uploads/{{this.item.image}}'
                                /></div>
                            <div style='flex:2'><p>{{this.item.name}}</p></div>
                            <div style='flex:1'><p>{{this.item.price}}<sup
                                    >đ</sup></p></div>
                            <div style='flex:1'>
                                <p class='quantity'>{{this.quantity}}</p>
                            </div>
                            <div style='flex:1'><p>{{this.price}}<sup
                                    >đ</sup></p></div>
                            <div style='flex:1'><a href="/cart/remove/{{this.item._id}}" class="btn btn-danger"></i> Remove</a></div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
{{else}}
    <div class='empty' style="min-height: 500px;">
        <h2 style="text-align: center;"> Oops !!! Giỏ hàng trống</h2>
    </div>
{{/if}}