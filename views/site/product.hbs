<!-- BREADCRUMB -->
<div id='breadcrumb' class='section'>
    <!-- container -->
    <div class='container'>
        <!-- row -->
        <div class='row'>
            <div class='col-md-12'>
                <ul class='breadcrumb-tree'>
                    <li><a href='/'>Home</a></li>
                    <li><a href='#'>{{category.name}}</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class='section'>
    <!-- container -->
    <div class='container'>
        <!-- row -->
        <div class='row'>
            <!-- ASIDE -->
            <div id='aside' class='col-md-3'>
                <!-- aside Widget -->
                <div class='aside'>
                    <h3 class='aside-title'>Danh mục sản phẩm</h3>
                    <div class='checkbox-filter'>

                        {{#each categories}}
                            <div class='input-checkbox'>
                                <label for='category-1'>
                                    {{this.name}}
                                </label>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <!-- /ASIDE -->

            <!-- STORE -->
            <div id='store' class='col-md-9'>
                <!-- store products -->
                <div class='row'>
                    {{#each productList}}
                        <!-- product -->
                        <div class='col-md-4 col-xs-6'>
                            <div class='product'>
                                <div class='product-img'>
                                    <img src='/uploads/{{this.image}}' alt='' />
                                </div>
                                <div class='product-body'>
                                    <h3 class='product-name'><a
                                            href='/products/detail/{{this._id}}'
                                        >{{this.name}}</a></h3>
                                    <h4 class='product-price'>{{this.price}}<sup
                                        >đ</sup></h4>
                                    <div class='product-btns'>
                                        <form
                                            action='/cart/add/{{this._id}}'
                                            method='GET'
                                        >

                                            <button class='btn btn-dark'><i
                                                    class='fa fa-shopping-cart'
                                                ></i><span class='tooltipp'> Thêm
                                                    giỏ hàng</span></button>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /product -->
                    {{/each}}
                </div>

                <!-- /store products -->

                <!-- store bottom filter -->
                <div class='store-filter clearfix'>

                    <ul class='store-pagination'>
                        {{#pagination current=current pages=pages}}{{/pagination}}
                    </ul>
                </div>
                <!-- /store bottom filter -->
            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
