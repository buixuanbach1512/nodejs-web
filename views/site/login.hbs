<div class='container'>
    <div class='row'>
        <div class='col-md-6 offset-md-3'>
            <div class='card my-5'>
                <form class='card-body cardbody-color p-lg-5' method="POST" action="/me/login-user">
                    <div class='text-center'>
                        <h2>Đăng nhập</h2>
                    </div>

                    <div class='mb-3'>
                        <input
                            type='text'
                            class='form-control'
                            id='Username'
                            name="name"
                            aria-describedby='emailHelp'
                            placeholder='Tài khoản'
                        />
                    </div>
                    <div class='mb-3'>
                        <input
                            type='password'
                            class='form-control'
                            id='password'
                            name="password"
                            placeholder='Mật khẩu'
                        />
                    </div>
                    <div class='text-center'><button
                            type='submit'
                            class='btn btn-color px-5 mb-5 w-100'
                        >Đăng nhập</button></div>
                    <div
                        id='emailHelp'
                        class='form-text text-center mb-5 text-dark'
                    >Chưa có tài khoản đăng nhập ?
                        <a href='/me/register' class='text-dark fw-bold'>
                            Tạo tài khoản</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>